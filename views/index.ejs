<!DOCTYPE html>
<html>
	<head>
		<title>Haiku for you</title>
		
		<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		
		<link href="/stylesheets/style.css" rel="stylesheet">
		<link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular-animate.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
		
		<script src="/javascripts/angularApp.js"></script>
		<link href='https://fonts.googleapis.com/css?family=Merriweather|Open+Sans:300,800' rel='stylesheet' type='text/css'>
	
	</head>
	<body ng-app="haikuForYou" ng-controller="MainCtrl">

		<ui-view class="{{haikusRandom[currentHaiku].haikuTheme}} themes"></ui-view>
		
		<script type="text/ng-template" id="/home.html">
			<header>
				<h2 class="brand">HAIKU FOR YOU</h2>
				<button class="submit" data-toggle="modal" data-target="#newHaikuModal">SUBMIT A HAIKU</button>		
			</header>		
			<main>
					<h1 class="mainHaiku">{{haikusRandom[currentHaiku].haikuLine1}}</h1>
					<h1 class="mainHaiku">{{haikusRandom[currentHaiku].haikuLine2}}</h1>
					<h1 class="mainHaiku">{{haikusRandom[currentHaiku].haikuLine3}}</h1>
			</main>
			<footer>
				<button class="more" ng-click="nextHaiku()">MORE HAIKUS</button>
			</footer>
			

			<!-- Modal -->
			<div class="modal fade" id="newHaikuModal" tabindex="-1" role="dialog" aria-labelledby="newHaikuModalLabel">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
					
						<form ng-submit="addHaiku()" name="createHaikuForm">

							<div class="modal-header">
								<button ng-click="clearFields()" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
								<h4 class="modal-title" id="newHaikuModalLabel">CREATE A HAIKU</h4>
							</div>
							<div class="modal-body">

								<input type="text" placeholder="Haiku Line 1:  5 Syllables" ng-model="haikuLine1" name="haikuLine1" required>
								<br>
								<input type="text" placeholder="Haiku Line 2:  7 Syllables" ng-model="haikuLine2" name="haikuLine2" required>
								<br>
								<input type="text" placeholder="Haiku Line 3:  5 Syllables" ng-model="haikuLine3" name="haikuLine3" required>
								<br>
								<div class="form-group">
									<label for="haikuTheme">HAIKU BACKGROUND THEME:</label>
									<select class="form-control" id="theme" ng-model="haikuTheme" name="haikuTheme" required>
										<option value="" disabled selected hidden>Please Choose...</option>
										<option value="beachTheme">Beach</option>
										<option value="careerTheme">Career</option>
										<option value="catTheme">Cat</option>
										<option value="cheersTheme">Cheers</option>
										<option value="childhoodTheme">Childhood</option>
										<option value="coffeeTheme">Coffee</option>
										<option value="dogTheme">Dog</option>
										<option value="fantasyTheme">Fantasy</option>
										<option value="fitnessTheme">Fitness</option>
										<option value="foodTheme">Food</option>
										<option value="happyTheme">Happy</option>
										<option value="musicTheme">Music</option>
										<option value="natureTheme">Nature</option>
										<option value="painTheme">Pain</option>
										<option value="romanceTheme">Romance</option>
										<option value="somberTheme">Somber</option>
										<option value="stormTheme">Storm</option>
										<option value="technologyTheme">Technology</option>
										<option value="travelTheme">Travel</option>
										<option value="whimsyTheme">Whimsy</option>
									</select>
								</div>

							</div>
							<div class="modal-footer">
								<button ng-click="clearFields()" type="button" class="btn btn-default" data-dismiss="modal" >CLOSE</button>
								<button type="submit" class="btn btn-primary" ng-disabled="createHaikuForm.$invalid" >SUBMIT HAIKU</button>
							</div>
						</form>
					</div>
				</div>
			</div>

		</script>
	
		<script type="text/ng-template" id="/admin.html">
			<div class="admin" ng-repeat="haiku in haikus"> 
				<p>{{haiku.haikuLine1}}</p>
				<p>{{haiku.haikuLine2}}</p>
				<p>{{haiku.haikuLine3}}</p>
				<button ng-click="deleteHaiku(haiku)">Delete this Haiku</button>
			</div>
		
		
		</script>
		
		
		
	</body>
</html>